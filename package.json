{
	"name": "sysex-manager",
	"private": true,
	"version": "0.0.1",
	"type": "module",
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"prepare": "husky && svelte-kit sync",
		"lint:file": "eslint --cache",
		"lint:file:fix": "eslint --cache --fix",
		"lint": "npm run lint:file -- .",
		"lint:fix": "npm run lint:file:fix -- .",
		"format:file": "prettier --write",
		"format:file:check": "prettier --check",
		"format": "npm run format:file -- .",
		"format:check": "npm run format:file:check -- .",
		"sv:check": "sv check --fail-on-warnings --tsconfig ./tsconfig.json",
		"sv:check:pre-commit": "scripts/pre-commit-svelte-check.sh",
		"sv:check:watch": "npm run sv:check -- --watch"
	},
	"devDependencies": {
		"@eslint/compat": "^1.3.0",
		"@iconify-json/lucide": "^1.2.51",
		"@iconify/svelte": "^5.0.0",
		"@iconify/tailwind4": "^1.0.6",
		"@internationalized/date": "^3.8.2",
		"@lucide/svelte": "^0.515.0",
		"@sveltejs/adapter-auto": "^6.0.0",
		"@sveltejs/adapter-static": "^3.0.8",
		"@sveltejs/kit": "^2.16.0",
		"@sveltejs/vite-plugin-svelte": "^5.0.0",
		"@tailwindcss/forms": "^0.5.9",
		"@tailwindcss/typography": "^0.5.15",
		"@tailwindcss/vite": "^4.0.0",
		"@tanstack/table-core": "^8.21.3",
		"@typescript-eslint/parser": "^8.35.0",
		"bits-ui": "^2.8.8",
		"clsx": "^2.1.1",
		"eslint": "^9.29.0",
		"eslint-config-prettier": "^10.1.5",
		"eslint-plugin-markdown": "^5.1.0",
		"eslint-plugin-prettier": "^5.4.1",
		"eslint-plugin-svelte": "^3.0.0",
		"globals": "^16.0.0",
		"husky": "^9.1.7",
		"lint-staged": "^16.1.2",
		"prettier": "^3.4.2",
		"prettier-plugin-svelte": "^3.3.3",
		"prettier-plugin-tailwindcss": "^0.6.11",
		"sv": "^0.8.12",
		"svelte": "^5.34.7",
		"svelte-check": "^4.0.0",
		"svelte-eslint-parser": "^1.2.0",
		"svelte-preprocess": "^6.0.3",
		"svelte2tsx": "^0.7.40",
		"tailwind-merge": "^3.3.1",
		"tailwind-variants": "^1.0.0",
		"tailwindcss": "^4.1.10",
		"tw-animate-css": "^1.3.4",
		"typescript": "^5.8.3",
		"typescript-eslint": "^8.20.0",
		"vite": "^6.2.6"
	},
	"dependencies": {
		"@thisux/sveltednd": "^0.0.20",
		"mode-watcher": "^1.1.0",
		"zod": "^3.25.67"
	},
	"lint-staged": {
		"*.{js,jsx,ts,svelte,tsx}": [
			"npm run lint:file:fix --",
			"npm run format:file --"
		],
		"*.{css,md,json}": "npm run format:file --"
	}
}
